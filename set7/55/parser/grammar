%class-name Parser
%filenames parser
%parsefun-source parse.cc
%scanner ../scanner/scanner.h

%token DOUBLE 
%token INT

//%debug 

%%

input:    
    prompt                     // initial prompt
| 
    input line '\n' prompt     // ask new input
|
    input '\n'
    {
        std::cout << '\n'      // correctly terminate program!
        ACCEPT();              // terminate
    }
;

prompt:
    {
        std::cout << "? ";      // or 'cout', when using namespace std
    }
;

line: 
    'm' IntOrDouble             // set mean
| 
    's' IntOrDouble             // set sd
| 
    IntOrDouble                 // return score
| 
    IntOrDouble INT             // return score and nObs
;

IntOrDouble:
    DOUBLE
|
    INT
;

